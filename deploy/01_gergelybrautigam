server {
    server_name gergelybrautigam.com;
    root /var/www/sites/gergelybrautigam/public;
    location / {
    }
    location ~* \.(?:css|js)$ {
        access_log off;
        #expires 7d;
        add_header Cache-Control public;
        try_files $uri /$uri/ /$1/$2;
    }
    location /img/ {
        autoindex on;
    }




    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/gergelybrautigam.com/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/gergelybrautigam.com/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}
server {
    if ($host = gergelybrautigam.com) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    server_name gergelybrautigam.com;
    listen 80;
    return 404; # managed by Certbot


}
